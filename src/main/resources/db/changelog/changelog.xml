<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0" author="olesia">
        <sql>
            CREATE TYPE degree_enum AS ENUM ('ASSISTANT', 'ASSOCIATE_PROFESSOR', 'PROFESSOR');
        </sql>

        <createTable tableName="lectors">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="degree" type="degree_enum">
                <constraints nullable="false"/>
            </column>
            <column name="salary" type="NUMERIC(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <createTable tableName="departments">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="head_id" type="BIGINT">
                <constraints unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <createTable tableName="department_lector">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="department_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="lector_id" type="BIGINT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="departments"
                                 baseColumnNames="head_id"
                                 constraintName="fk_departments_head_id"
                                 referencedTableName="lectors"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="department_lector"
                baseColumnNames="department_id"
                constraintName="fk_departmentlector_department_id"
                referencedTableName="departments"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="department_lector"
                baseColumnNames="lector_id"
                constraintName="fk_departmentlector_lector_id"
                referencedTableName="lectors"
                referencedColumnNames="id"/>

        <addUniqueConstraint
                tableName="department_lector"
                columnNames="department_id, lector_id"
                constraintName="uk_department_lector_pair"/>

        <createIndex tableName="lectors" indexName="idx_lectors_name_surname">
            <column name="name"/>
            <column name="surname"/>
        </createIndex>

        <createIndex tableName="lectors" indexName="idx_lectors_degree">
            <column name="degree"/>
        </createIndex>

        <createIndex tableName="department_lector" indexName="idx_department_lector_department_id">
            <column name="department_id"/>
        </createIndex>

        <createIndex tableName="departments" indexName="idx_departments_head_id">
            <column name="head_id"/>
        </createIndex>

    </changeSet>

    <changeSet id="1" author="olesia">
        <dropForeignKeyConstraint
                baseTableName="department_lector"
                constraintName="fk_departmentlector_department_id"/>

        <addForeignKeyConstraint
                baseTableName="department_lector"
                baseColumnNames="department_id"
                constraintName="fk_departmentlector_department_id"
                referencedTableName="departments"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>